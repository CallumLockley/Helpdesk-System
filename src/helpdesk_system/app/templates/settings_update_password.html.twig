{% extends 'layout.html.twig' %}
{% block content %}

    <section id="settings" class="">
        <div class="container">
            <div class="row text-white ">
                <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                    <h1 class="display-4 py-2 pt-3 text-center">Update your password</h1>
                    {% if error == 1 %}
                        <p class="error">There was an error updating, please try again.</p>
                    {% endif %}
                    <div class="px-2">
                        <form method="POST" action="settings/update_password" class="justify-content-center">
                            <div class="form-group">
                                <label for="password" class="fsize-20">Current Password</label>
                                <input type="password" name="current_password" placeholder="Current Password" class="form-control" required>
                            </div>
                            <div class="pt-4 pb-2 form-group">
                                <label for="password_first" class="fsize-20">Enter your new password:</label>
                                <input type="password" name="password_first" placeholder="New Password" class="form-control" minlength="8">
                            </div>
                            <div class="pb-2 form-group">
                                <label for="password_second" class="fsize-20">Re-enter your new password:</label>
                                <input type="password" name="password_second" placeholder="Repeat New Password" class="form-control" minlength="8">
                            </div>
                            <label class="pb-2">Please enter it is at least 8 characters, contains lower and upper case with numerical values</label>
                            <button class="btn btn-secondary" onclick="history.back()">Back</button>
                            <button type="submit" class="btn btn-secondary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}