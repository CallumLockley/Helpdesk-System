{% extends 'layout.html.twig' %}
{% block content %}
    <div class="pt-5">
    </div>
    <section id="create-ticket" class="">
        <div id="cover-caption">
            <div class="container shadow-lg">
                <div class="row text-white ">
                    <div class=" col-md-10 col-sm-6 mx-auto text-center form p-4">
                        <h1 class="display-4 py-2 text-center text-bold ">Create a ticket</h1>
                        <div class="px-2 mt-5 ">
                            <form method="POST" action="{{ create_ticket_route }}" class="justify-content-center">
                                <div class="m-4 form-group">
                                    <label class="sr-only fsize-30" for="priority">Priority:</label>
                                    <select class="pr-5 ml-4" name="priority">
                                        {% for priority in ticket_priorities %}
                                            <option value={{priority}}>{{ priority }}</option>
                                        {% endfor %}
                                    </select>
                                    <span>&nbsp;&nbsp;&nbsp;</span>
                                    <label class="sr-only fsize-30" for="area">Category:</label>
                                    <select class="" name="category">
                                        {% for category in ticket_categories %}
                                            <option class="fsize-20" value={{category}}>{{ category }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="sr-only pb-2 fsize-30">Brief Description</label>
                                    <input type="text" name="title" class="form-control ticket_form" maxlength="50" placeholder="Enter a brief title describing the issue."required>
                                </div>
                                <div class="pt-4 pb-4 form-group">
                                    <label class="sr-only pb-2 fsize-30">Details</label>
                                    <textarea type="text" name="description" class="form-control ticket_form" rows="4" cols="50" placeholder="Explain your issue in detail."></textarea>
                                </div>
                                <button class="btn btn-primary" onclick="history.back()">Back</button>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}