{% extends 'layout.html.twig' %}
{% block content %}
    <div class="pt-5">
    </div>

    <section id="view-specific-ticket" class="">
        <div id="cover-caption">
            <div class="container shadow-lg">
                <div class="row text-white ">
                    <div class=" col-md-10 col-sm-6 mx-auto text-center p-4">
                        <h1 class="display-4 py-2 text-center">{{ page_heading }}</h1>
                        <hr>
                        <table class="">
                            <tr>
                                <th>Category</th>
                                <th>Priority</th>
                                <th>Opened At</th>
                            </tr>
                            <tr>
                                <td>{{ ticket['category'] }}</td>
                                <td>{{ ticket['priority'] }}</td>
                                <td>{{ ticket['created'] }}</td>
                            </tr>
                        </table>
                        <hr class="mt-4">
                        <h3 class="">Description:</h3>
                        <article class="fsize-20">{{ ticket['description'] }}</article>
                        <hr class="mt-4">
                        <form method="POST" action="{{ new_comment_route }}" >
                            <h3>New Comment</h3>
                            <textarea type="text" name="message" class="form-control comment_form" rows="2" cols="50" placeholder="Add a new comment."></textarea>
                            <button type="SUBMIT" class="btn btn-primary mt-1 mb-1">Add Comment</button>
                        </form>
                        <hr>
                        {% if comments is not empty %}
                            <h3>Comments</h3>
                            {% for comment in comments %}
                                <div class="container row">
                                    <p>{{ comment.message }}</p>
                                    <p>{{ comment.username }}</p>
                                </div>
                                <hr>
                            {% endfor %}
                        {% endif %}
                        <div class="btn-group">
                            <button class="btn btn-primary" onclick="history.back()">Return to Tickets</button>
                            <button class="btn ml-5 btn-primary">Resolve</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}